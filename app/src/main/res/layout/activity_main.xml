<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#272C30"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="90dp"
        android:text="0"
        android:textSize="40dp"
        android:padding="15dp"
        android:layout_margin="13dp"
        android:gravity="right"
        android:background="#DCDCDC"
        android:textColor="@color/black"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/Percent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="@string/percent"
                android:textSize="25sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/rojoGamer"
                android:layout_span="4">
            </Button>
            <Button
                android:id="@+id/C"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="@string/c"
                android:textSize="25sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/verdeGamer"
                android:layout_span="4">
            </Button>
            <Button
                android:id="@+id/CE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="@string/ce"
                android:textSize="25sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/naranjaGamer"
                android:layout_span="4">
            </Button>
            <Button
                android:id="@+id/ANS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="ANS"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/rosaGamer"
                android:layout_span="4">
            </Button>
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/minusOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="^-1"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/rosaGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/squared"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="X^2"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/azulGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/squaredRoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="sqrt(X)"
                android:textSize="10sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/verdeGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="/"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/naranjaGamer"
                android:layout_span="4"></Button>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="7"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/amarilloGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="8"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/rosaGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="9"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/rojoGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/mult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="*"
                android:textSize="35sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/verdeGamer"
                android:layout_span="4"></Button>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="4"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@color/moradoGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="5"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@color/azulGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="6"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/verdeGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="-"
                android:textSize="35sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/rojoGamer"
                android:layout_span="4"></Button>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="1"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/naranjaGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="2"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/moradoGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="3"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/amarilloGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/sum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="+"
                android:textSize="35sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/rosaGamer"
                android:layout_span="4"></Button>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/MasMenos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="+/-"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textColor="@color/azulGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#808080"
                android:text="0"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/verdeGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="."
                android:textSize="45sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/azulGamer"
                android:layout_span="4"></Button>
            <Button
                android:id="@+id/equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="#696969"
                android:text="="
                android:textSize="35sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="@color/naranjaGamer"
                android:layout_span="4"></Button>
        </TableRow>
    </TableLayout>

</LinearLayout>